<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO" strict="true" monitorInterval="30">
    <Properties>
        <Property name="logPath">log/dev</Property>
        <Property name="logPattern">%d %highlight{%-5level} [%t] %blue{%logger{36}} - %msg%n</Property>
    </Properties>

    <Appenders>
        <!--控制台输出-->
        <Appender type="Console" name="STDOUT">
            <Target>SYSTEM_OUT</Target>
            <Layout></Layout>
        </Appender>

        <!--输出到文件-->
        <RollingRandomAccessFile name="FILE_ERROR" filename="${logPath}/error.log" filepattern="${logPath}/%d{YYYYMMdd}-%i-error.log.zip">
            <ThresholdFilter level="ERROR"/>
            <PatternLayout pattern="${logPattern}"/>
            <Policies>
                <!--设置每天打包日志一次-->
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <!--设置日志文件满5MB后打包-->
                <SizeBasedTriggeringPolicy size="5 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="20"/>
        </RollingRandomAccessFile>
    </Appenders>
</Configuration>